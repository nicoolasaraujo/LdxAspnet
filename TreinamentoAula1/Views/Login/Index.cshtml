@model TreinamentoAula1.Models.DataContract.Login
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Treinamento Web</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- <link rel="stylesheet" type="text/css" media="screen" href="main.css" /> -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/login.css" rel="stylesheet">
    <link href="~/Content/Site.css" rel="stylesheet">
</head>

<body>
    <div class="container-fluid">
        <!-- Logo e mensagem -->
        <div class="row ">
            <div class="col-sm-4 col-sm-offset-4 cab">
                <div class="col-sm-6">
                    <img class="img-responsive" src="~/Content/images/logo.png">
                </div>
                <div class="col-sm-6">
                    <h1>Aspnet#1!!</h1>
                </div>
            </div>
        </div>
        <!-- Formulario -->
        <div class="form-row">
            @*<form class="form-vertical form-login col-sm-4 col-sm-offset-4">*@
                @using (Html.BeginForm("Login", "Login", new { @class = "form-vertical form-login col-sm-4 col-sm-offset-4" }))
                {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @*<label for="user" class="control-label">Usuário:</label>
                    <input type="email" id="user" value="nicolasnogueira@landix.com.br" placeholder="Email" class="form-control" required>
                    <span class="error-feedback col-md-12 text-right"></span>*@
                    @Html.LabelFor(model => model.Username)
                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control"} } )
                    @Html.ValidationMessageFor(model => model.Username, "", new {@class = "has-error"})
                </div>
                <div class="form-group">
                    @*<label for="passwd" class="control-label">Senha:</label>
                    <input type="password" id="passwd" value="JoPYF3fT" placeholder="Password" class="form-control" required>
                    <span class="error-feedback col-md-12 text-right"></span>*@
                    @Html.LabelFor(model => model.Password)
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "has-error" })
                </div>
                <div class="text-right">
                    <button class="btn btn-success" type="submit">Entrar</button>
                </div>
                @*<div class="alert  login-failed">
                </div>*@
                    <strong>@Html.ValidationSummary(true,"", new { @class = "has-error" })</strong>
            @*</form>*@
                }
        </div>
        <!-- alert-danger -->
        <script src="~/scripts/jquery-1.10.2.min.js"></script>
        <script src="~/scripts/jquery.validate.min.js"></script>
        <script src="~/scripts/jquery.validate.unobtrusive.min.js"></script>
        <script src="~/scripts/bootstrap.min.js"></script>
    </div>
</body>

</html>
